<% if signed_in? %>
  <table class="front" summary="For signed-in users">
	<tr>
	  <td class="main">
		<h1 class="micropost">What's up?</h1>
		<%= render 'shared/micropost_form' %>
		<%= render 'shared/feed' %>
	  </td>
	  <td class="sidebar round">
		<%= render 'shared/user_info' %>
		<%= render 'shared/stats' %>
	  </td>
	</tr>
  </table>
<% else %>
  <h1>Welcome</h1>

  <p>
	Welcome to Vesta.com. We are currently under construction but please check back with us soon. <br />
  </p>

  <p> 	P.S. Go Get Up, Up! coming to the iPhone App Store soon. </p>

  <%= link_to "Sign up now!", signup_path, :class => "signup_button round" %>
<% end %>